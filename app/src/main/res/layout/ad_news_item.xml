<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:descendantFocusability="blocksDescendants"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="18dp"
                android:id="@+id/ad_news_item_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_marginLeft="6dp"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_marginTop="24dp"
                android:textSize="12dp"
                android:id="@+id/ad_news_item_desc_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="#A0000000" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ad_news_item_all_ll"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ad_news_item_logo_im"
                android:layout_width="98dp"
                android:layout_height="72dp"
                android:layout_margin="10dp" />

            <Button
                android:id="@+id/ad_news_item_download_bt"
                android:layout_width="56dp"
                android:layout_height="28dp"
                android:layout_marginBottom="10dp"
                android:background="#80000000"
                android:textSize="13sp"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorView"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ad_news_item_poster_im"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="6dp"
            android:scaleType="fitXY"
            android:visibility="gone"/>

    </FrameLayout>

</LinearLayout>