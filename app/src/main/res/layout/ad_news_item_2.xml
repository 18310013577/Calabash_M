<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView
        android:id="@+id/dou_item2_type"
        android:gravity="center"
        android:textSize="9dp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/border_dou"
        android:layout_marginLeft="15dp"
        android:text="广告"
        android:layout_width="56dp"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/colorTextNormal"
            android:layout_marginBottom="5dp"
            android:id="@+id/ad_news_item_2_desc_tv"
            android:textSize="18dp"
            android:text="描述"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/ad_news_item_2_poster_im"
            android:layout_width="match_parent"
            android:layout_height="180dp" />
        <RelativeLayout
            android:background="@color/colorBackground"
            android:descendantFocusability="blocksDescendants"
            android:id="@+id/ad_news_item_2_all_Rl"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="18sp"
                android:id="@+id/ad_news_item_2_title_tv"
                android:layout_centerVertical="true"
                android:text="标题"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:textSize="14sp"
                android:id="@+id/ad_news_item_2_download_bt"
                android:layout_margin="5dp"
                android:background="@drawable/button_selector"
                android:layout_alignParentRight="true"
                android:layout_width="56dp"
                android:layout_height="28dp" />
        </RelativeLayout>


    </LinearLayout>
    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorView"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


</LinearLayout>