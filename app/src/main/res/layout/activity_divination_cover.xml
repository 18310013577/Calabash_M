<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wave="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:visibility="visible"
    android:id="@+id/divination_cove_Rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.john.waveview.WaveView
        android:id="@+id/divination_cover_wave_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffd987"
        wave:above_wave_color="#ffb11b"
        wave:blow_wave_color="#dda52d"
        wave:progress="0"
        wave:wave_height="large"
        wave:wave_hz="normal"
        wave:wave_length="middle" />

    <com.mikhaellopez.circularprogressbar.CircularProgressBar
        android:layout_centerInParent="true"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:cpb_progress="100"
        android:id="@+id/divination_cover_pb"
        app:cpb_background_progressbar_color="#FFCDD2"
        app:cpb_background_progressbar_width="5dp"
        app:cpb_progressbar_color="#F44336"
        app:cpb_progressbar_width="10dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:layout_centerInParent="true"
        android:id="@+id/divination_cover_finger"
        android:src="@mipmap/pic_divination_finger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />



</RelativeLayout>