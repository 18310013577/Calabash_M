<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    card_view:cardCornerRadius="1dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="2dp"
    android:layout_marginLeft="2dp"
    card_view:cardPreventCornerOverlap="true"
    card_view:cardBackgroundColor="@color/colorBackB"
    card_view:cardElevation="0dp"
    >

    <LinearLayout
        android:id="@+id/divination_main_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginLeft="10dp"
            android:src="@drawable/pic_divination_one"
            android:layout_width="120dp"
            android:layout_height="150dp" />
        <com.romainpiel.shimmer.ShimmerTextView
            android:gravity="center"
            android:id="@+id/divination_main_title_tv"
            android:text="黄大仙灵签，点击抽签"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/colorYellow"
            app:reflectionColor="#f00"
            android:textSize="20sp"/>


    </LinearLayout>
</android.support.v7.widget.CardView>

