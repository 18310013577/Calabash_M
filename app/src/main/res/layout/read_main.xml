<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="1dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="2dp"
    android:layout_marginLeft="2dp"
    card_view:cardBackgroundColor="@color/colorBackC"
    card_view:cardPreventCornerOverlap="true"
    card_view:cardElevation="0dp"
    card_view:contentPadding="2dp">

    <LinearLayout
        android:id="@+id/read_main_ll"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/constellation_main_name_tv"
                android:textSize="25dp"
                android:text="每日精选"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/read_main_date_tv"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/constellation_main_name_tv"
                android:text="9月17日"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/read_main_more_im"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/pic_news_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="16dp"
                    android:id="@+id/read_main_title_tv"
                    android:textColor="@color/colorTextNormal"
                    android:text="    夜读】梁晓声：你追求的，就是你人生的意义"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:background="@drawable/border_item"
                    android:id="@+id/read_main_time_tv"
                    android:layout_marginTop="5dp"
                    android:text="25分钟前"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>
            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/read_main_pic_im"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/test4"
                android:layout_width="96dp"
                android:layout_height="72dp" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>

