<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/joker_pic_item_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/colorTextNormal"
                android:id="@+id/joker_pic_item_content_tv"
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="内容"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.facebook.drawee.view.SimpleDraweeView
                fresco:actualImageScaleType="fitCenter"
                fresco:progressBarImage="@mipmap/pic_yi_progress"
                fresco:progressBarImageScaleType="centerInside"
                fresco:progressBarAutoRotateInterval="5000"
                fresco:failureImage="@mipmap/pic_yi_failure"
                fresco:failureImageScaleType="centerInside"
                fresco:retryImage="@mipmap/pic_yi_retry"
                fresco:retryImageScaleType="centerInside"
                android:id="@+id/joker_pic_item_pic"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

                <TextView
                    android:layout_marginTop="5dp"
                    android:textSize="12dp"
                    android:id="@+id/joker_pic_item_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4分钟前" />

        </LinearLayout>
    <View
        android:layout_marginTop="5dp"
        android:background="@color/colorView"
        android:layout_width="match_parent"
        android:layout_height="5dp"></View>


</LinearLayout>


